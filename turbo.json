{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "pipeline": {
    "manifest": {
        "inputs": ["manifest/**", "scripts/build-manifest.sh", "subgraph.template.yaml"],
        "outputs": ["subgraph.yaml"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "cache/**",
        "out/**",
        "build/**",
        "generated/**"
      ]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["test/**/*.t.sol"]
    },
    "lint": {},
    "lint:fix": {},
    "clean": {
        "cache": false
    },
    "//#clean": {
        "cache": false
    },
    "type-check": {
        "cache": false
    },
    "subgraph#build": {
      "dependsOn": ["manifest"]
    }
  },
  "globalEnv": [
    "SKIP_ENV_VALIDATION"
  ]
  
}
