{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "cache/**", "out/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["test/**/*.t.sol"],
      "outputs": [],
      "env": ["FOUNDRY_PROFILE"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
