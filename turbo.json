{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "cache/**",
        "out/**",
        "build/**",
        "generated/**"
      ]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["test/**/*.t.sol"],
      "outputs": [],
      "env": ["GOERLI_RPC_URL"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "subgraph#build": {
      "dependsOn": ["foundry#build"]
    }
  }
}
